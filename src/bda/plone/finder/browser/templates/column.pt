<div id=""
     class="finder_column"
     tal:define="items view/itemslice;
                 batch nocall:view/batch"
     tal:attributes="id view/uid">
  
  <p class="col_navigation" tal:condition="nothing">
    <img src="++resource++bda.plone.finder.images/blank.gif" />
  
    <tal:batch replace="structure batch/render" />
    
    <tal:page define="firstpage batch/firstpage"
              condition="firstpage">
      <a href="#"
         tal:condition="python: firstpage['visible'] and not firstpage['current']"
         tal:attributes="href firstpage/url">
        <img src="++resource++bda.plone.finder.images/first.gif"
             tal:attributes="name firstpage/url"
             class="batchlink" />
      </a>
      <img src="++resource++bda.plone.finder.images/first_invisible.gif"
           tal:condition="python: not firstpage['visible'] or firstpage['current']" />
    </tal:page>
    
    <tal:page define="prevpage batch/prevpage"
              condition="prevpage">
      <a href="#"
         tal:condition="python: prevpage['visible'] and not prevpage['current']"
         tal:attributes="href prevpage/url">
        <img src="++resource++bda.plone.finder.images/up.gif"
             tal:attributes="name prevpage/url"
             class="batchlink" />
      </a>
      <img src="++resource++bda.plone.finder.images/up_invisible.gif"
           tal:condition="python: not prevpage['visible'] or prevpage['current']" />
    </tal:page>
  </p>
  
  <div class="finder_scrollbar">
    <div class="scoll_up">
      <img src="++resource++bda.plone.finder.images/up_invisible.gif" />
    </div>
    <div class="slider_area">
      <div class="slider"></div>
    </div>
    <div class="scoll_down">
      <img src="++resource++bda.plone.finder.images/down_invisible.gif" />
    </div>
  </div>
  
  <ul class="columnitems"
      tal:condition="items">
    <tal:li repeat="item items">
      <li tal:define="selected python: item['selected'] and 'selected' or '';
	                  state python: item['state'] and 'state-%s' % item['state'] or '';
	                  cut python: item['cut'] and 'cut' or '';
	                  css python: ' '.join([state, selected, cut]).strip();"
	      tal:attributes="id item/uid;
	                      class python: css and css or None;">
	    <img src=""
	         tal:attributes="src item/icon" />
	    <a rel="#"
	       class=""
	       tal:content="item/title"
	       tal:attributes="rel python: '#%s' % view.uid;
	                       class python: item['is_folderish'] \
	                                     and 'column_expand nav_item_name' \
	                                     or 'column_details nav_item_name'">
	      Title
	    </a>
	    <a rel="#"
	       class="column_details arrow_right"
	       tal:condition="item/is_folderish"
	       tal:attributes="rel python: '#%s' % view.uid">&nbsp;</a>
	  </li>
    </tal:li>
  </ul>
  
  <ul tal:condition="not:items">
    <li>
      <strong i18n:translate="">No Items</strong>
    </li>
  </ul>

</div>